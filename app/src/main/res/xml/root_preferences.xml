<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Functionality">
        <ListPreference
            app:key="ringtone_list_preference"
            app:title="Ringtone"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="enable_alarm_on_save_preference"
            app:title="Enable alarm on save" />

        <SeekBarPreference
            app:key="snooze_time_preference"
            app:title="Snooze time in minutes"
            app:showSeekBarValue="true"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Ads">

        <SwitchPreferenceCompat
            app:enabled="false"
            app:key="ads_switch_preference"
            app:title="Banner enabled" />
    </PreferenceCategory>

</PreferenceScreen>